.list
  width 80%
  margin auto

.video-result
  display flex
  align-items center
  word-wrap break-word

  img
    width 30%

  .video-title
    margin-left 10px
    width 65%
    float right
    height 125px
    display flex
    flex-direction column
    justify-content center

    .video-title-text
      @media screen and (max-width: 600px)
        font-size 30px
      font-size 30px
      word-wrap break-word
      width 100%

.search
  height 200px

.bottom-navigation
  height 200px !important
  top auto
  bottom 0

  .nav-item
    min-width 33% !important
    max-width 33% !important
    width 33% !important

    div
      font-size 60px !important

    svg
      height 100px !important
      width 100px !important
